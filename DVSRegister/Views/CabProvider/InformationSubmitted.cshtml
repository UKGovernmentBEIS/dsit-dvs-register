@{
    ViewData["Title"] = "Service provider profile created successfully";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">
                        Service provider profile created successfully
                    </h1>
                </div>
                <p class="govuk-body">
                    You have successfully created a profile for the digital identity and attribute service provider.

                </p>
                
                <h2 class="govuk-heading-m">What happens next</h2>
                <p class="govuk-body">
                    You can view the profile and add a service by returning to the homepage and selecting ‘Submit certificate information’.
                </p>
                <p class="govuk-body">
                    If you need help, you can contact OfDIA at <b>digital.identity.register@dsit.gov.uk</b>.
                </p>
                <p class="govuk-body">
                    You can close this page now.
                </p>

            </div>
        </div>
        <a href="@Url.Action("LandingPage", "Cab")" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
            Return to home

        </a>
    </main>
</div>

