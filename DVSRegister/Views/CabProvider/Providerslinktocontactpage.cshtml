@model DVSRegister.Models.CAB.ProfileSummaryViewModel
@{
    ViewData["Title"] = "The digital identity and attribute service provider’s link to contact page";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


@{
    bool hasError = false;
}
@using (Html.BeginForm("SaveProvidersLinkToContactPage", "CabProvider", FormMethod.Post))
}


@Html.TextBoxFor(m => m.FromSummaryPage)
<div class="govuk-width-container">
    @Html.ActionLink("Back", "WebsiteAdress", null, new { @class = "govuk-back-link" })
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">The digital identity and attribute service provider’s link to contact page</h1>
                <p class="govuk-body">You should ask the service provider to provide this information. The contact page you enter will be publicly displayed on the register of digital identity and attribute services.</p>




                @{
                    var ProvidersLinkToContactPageViewModel = new TextBoxViewModel
                    {
                        PropertyName = "ProvidersLinkToContactPage",
                        Label = "Public contact page (optional)",
                        Value = Model?.ProvidersLinkToContactPage ?? string.Empty,
                        Class = "govuk-input",
                        Hint = "For example, www.yourcompanyexpress.co.uk/contact-us",
                        HasError = hasError,
                        ErrorMessage = hasError ? Html.ViewData?.ModelState["ProvidersLinkToContactPage"]?.Errors[0].ErrorMessage ?? string.Empty : string.Empty,
                    };
                }


                @await Html.PartialAsync("~/Views/PartialViews/_TextBoxView.cshtml", ProvidersLinkToContactPageViewModel)


                @Html.ActionLink("Continue", "ProfileSummary", "CabProvider", null, new { @class = "govuk-button" })
                <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                    Save and complete later
                </button>
            </div>
        </div>
    </main>
</div>
