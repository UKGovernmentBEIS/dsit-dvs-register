@using DVSRegister.CommonUtility
@using DVSRegister.CommonUtility.Models.Enums;
@model DVSRegister.Models.CAB.ProfileSummaryViewModel
@{
    ViewData["Title"] = "Check your answers before submitting your information";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    SourcePageEnum sourcePage = SourcePageEnum.profilesummary;
}

@using (Html.BeginForm("SaveProfileSummary", "CabProvider", FormMethod.Post))
{
    <div class="govuk-width-container">
        @Html.ActionLink("Back", "LinkToContactPage", "CabProvider", null, new { @class = "govuk-back-link" })
        <main id="main-content" class="govuk-main-wrapper" role="main">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl"> Check your answers before submitting your information</h1>

                </div>
                <div class="govuk-grid-column-full">


                    <div class="govuk-summary-card">
                        <div class="govuk-summary-card__title-wrapper">
                            <h2 class="govuk-summary-card__title">
                                Company information
                            </h2>
                        </div>
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Registered company name
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model.RegisteredName
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "RegisteredName", "CabProvider", new { sourcePage = @sourcePage },
                                                 new
                                                      {
                                                          @class = "govuk-link",
                                                       @aria_label = "Change digital identity and attribute service provider’s registered company name"
                                                      })
                                    </dd>
                                </div>
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Trading name
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Html.DisplayFor(model => model.TradingName)
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "TradingName", "CabProvider", new { sourcePage = @sourcePage },
                                                 new
                                                      {
                                                          @class = "govuk-link",
                                                       @aria_label = "Change digital identity and attribute service provider’s trading name"
                                                      })
                                    </dd>
                                </div>


                                @if(Model.HasRegistrationNumber == true)
                                {
                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Companies House or charity
                                            registration number
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                            @Html.DisplayFor(m => m.CompanyRegistrationNumber)
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "HasRegistrationNumber", "CabProvider", new { sourcePage = @sourcePage }, new
                                                {
                                                    @class = "govuk-link",
                                                    @aria_label = "Change digital identity and attribute service Companies House or charity registration number"
                                                })
                                        </dd>
                                    </div>
                                }
                                else if(Model.HasRegistrationNumber == false)
                                {
                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Dun & Bradstreet or D-U-N-S
                                            number
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                            @Html.DisplayFor(m => m.DUNSNumber)
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "HasRegistrationNumber", "CabProvider", new { sourcePage = @sourcePage }, new
                                                {
                                                    @class = "govuk-link",
                                                    @aria_label = "Change digital identity and attribute service Companies House or charity registration number"
                                                })
                                        </dd>
                                    </div>
                                } 

                                @if(Model.HasParentCompany == true)
                                {
                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Registered name of parent company
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                            @Model.ParentCompanyRegisteredName
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "HasParentCompany", "CabProvider", new { sourcePage = @sourcePage }, new
                                                { @class = "govuk-link", @aria_label = "Change digital identity and attribute service registered name of parent company" })
                                        </dd>
                                    </div>

                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Location of parent company
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                            @Model.ParentCompanyLocation
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "ParentCompanyLocation", "CabProvider", new { sourcePage = @sourcePage }, new
                                                { @class = "govuk-link", @aria_label = "Change digital identity and attribute service location of parent company" })
                                        </dd>
                                    </div>
                                }
                                else
                                {
                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Registered name of parent company
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                           @Constants.NullFieldsDisplay
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "HasParentCompany", "CabProvider", new { sourcePage = @sourcePage }, new
                                                { @class = "govuk-link", @aria_label = "Change digital identity and attribute service registered name of parent company" })
                                        </dd>
                                    </div>

                                    <div class="govuk-summary-list__row">
                                        <dt class="govuk-summary-list__key">
                                            Location of parent company
                                        </dt>
                                        <dd class="govuk-summary-list__value">
                                            @Constants.NullFieldsDisplay
                                        </dd>
                                        <dd class="govuk-summary-list__actions">
                                            @Html.ActionLink("Change", "HasParentCompany", "CabProvider", new { sourcePage = @sourcePage }, new
                                                { @class = "govuk-link", @aria_label = "Change digital identity and attribute service location of parent company" })
                                        </dd>
                                    </div>
                                }

                                   



                            </dl>
                        </div>
                    </div>



                    <div class="govuk-summary-card">
                        <div class="govuk-summary-card__title-wrapper">
                            <h2 class="govuk-summary-card__title">
                                Primary contact details
                            </h2>
                            <ul class="govuk-summary-card__actions">

                                <li class="govuk-summary-card__action">
                                    @Html.ActionLink("Change", "PrimaryContact", "CabProvider", new { sourcePage = @sourcePage }, new
                                        {
                                            @class = "govuk-link",
                                           @aria_label = "Change digital identity and attribute service primary contact details"
                                        })

                                </li>
                            </ul>
                        </div>
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Full name of primary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.PrimaryContact?.PrimaryContactFullName
                                    </dd>
                                </div>
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Job title of primary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.PrimaryContact?.PrimaryContactJobTitle
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Email address of primary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.PrimaryContact?.PrimaryContactEmail
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Telephone number of primary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.PrimaryContact?.PrimaryContactTelephoneNumber
                                    </dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <div class="govuk-summary-card">
                        <div class="govuk-summary-card__title-wrapper">
                            <h2 class="govuk-summary-card__title">
                                Secondary contact details
                            </h2>
                            <ul class="govuk-summary-card__actions">

                                <li class="govuk-summary-card__action">
                                    @Html.ActionLink("Change", "SecondaryContact", "CabProvider", new { sourcePage = @sourcePage }, new
                                        {
                                            @class = "govuk-link",
                                         @aria_label = "Change digital identity and attribute service secondary contact details"
                                        })
                                </li>
                            </ul>
                        </div>
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Full name of secondary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.SecondaryContact?.SecondaryContactFullName
                                    </dd>
                                </div>
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Job title of secondary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.SecondaryContact?.SecondaryContactJobTitle
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Email address of secondary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.SecondaryContact?.SecondaryContactEmail
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Telephone number of secondary contact
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model?.SecondaryContact?.SecondaryContactTelephoneNumber
                                    </dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <div class="govuk-summary-card">
                        <div class="govuk-summary-card__title-wrapper">
                            <h2 class="govuk-summary-card__title">
                                Public contact information
                            </h2>
                        </div>
                        <div class="govuk-summary-card__content">
                            <dl class="govuk-summary-list">
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Contact email
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @(string.IsNullOrEmpty(Model.PublicContactEmail) ? Constants.NullFieldsDisplay : Model.PublicContactEmail)
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "PublicContactEmail", "CabProvider", new { sourcePage = @sourcePage },
                                                 new { @class = "govuk-link", @aria_label = "Change digital identity and attribute service provider’s Public email address" })
                                    </dd>
                                </div>
                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Telephone number
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Html.DisplayFor(model => model.ProviderTelephoneNumber)
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "TelephoneNumber", "CabProvider", new { sourcePage = @sourcePage },
                                                 new { @class = "govuk-link", @aria_label = "Change digital identity and attribute service provider’s telephone number" })
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Website address
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                        @Model.ProviderWebsiteAddress
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "WebsiteAddress", "CabProvider", new { sourcePage = @sourcePage },
                                                 new { @class = "govuk-link", @aria_label = "Change digital identity and attribute service provider’s website address" })
                                    </dd>
                                </div>

                                <div class="govuk-summary-list__row">
                                    <dt class="govuk-summary-list__key">
                                        Link to Contact Page
                                    </dt>
                                    <dd class="govuk-summary-list__value">
                                       @Html.DisplayFor(m=>m.LinkToContactPage)
                                    </dd>
                                    <dd class="govuk-summary-list__actions">
                                        @Html.ActionLink("Change", "LinkToContactPage", "CabProvider", new { sourcePage = @sourcePage },
                                            new { @class = "govuk-link", @aria_label = "Change digital identity and attribute service provider’s public link to contact us page" })
                                    </dd>
                                </div>

                            </dl>
                        </div>
                    </div>

                </div>
                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-warning-text">
                        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                        <strong class="govuk-warning-text__text">
                            <span class="govuk-visually-hidden">Warning</span>
                            If OfDIA approves this submission, any public information provided will be published on the register.
                        </strong>
                    </div>

                </div>
            </div>

            <button type="submit" data-prevent-double-click="true" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button">
                Submit
            </button>
        </main>
    </div>

}


