@{
    ViewData["Title"] = "You are about to reject this reassignment request";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
<div class="govuk-width-container">
    <a href="#" class="govuk-back-link">Back</a>
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">You are about to reject this reassignment request</h1>
                <p class="govuk-body">
                    You are about to reject this request to reassign a service to your
                    Conformity Assessment Body (CAB).
                </p>
                <p class="govuk-body">
                    Provider: ((provider name)) <br />
                    Service: ((service name)) <br />
                </p>
                <p class="govuk-body">
                   If you reject the request you will not be able to view or make changes to the
                    service record in the Conformity Assessment Body Service.
                </p>
                <p class="govuk-body">
                    If you wish to continue, please select 'Reject reassignment request'.
                </p>
                <p class="govuk-body">
                    If you do not wish to continue, please select 'Cancel' to return to 'Your service
                    provider profiles'
                </p>
                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-visually-hidden">Warning</span>
                        Once you reject this reassignment request, the action cannot be undone.
                    </strong>
                </div>
                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Reject reassignment request
                    </button>
                    <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

