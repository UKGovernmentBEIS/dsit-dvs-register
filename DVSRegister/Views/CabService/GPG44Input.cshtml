@model DVSRegister.Models.CAB.ServiceSummaryViewModel
@{
    ViewData["Title"] = "SelectSupplementarySchemes";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
@{
    bool isValid = true;
}
<div class="govuk-width-container">
    @*@Html.ActionLink("Back", "HasSupplementaryScheme", "Cab", new { fromSummaryPage = ViewBag.fromSummaryPage }, new { @class = "govuk-back-link" })*@
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">
                    Is the service certified against GPG44?
                </h1>

                @if (Html.ViewData?.ModelState.ContainsKey("HasGPG44") == true && Html.ViewData.ModelState["HasGPG44"].Errors.Count > 0)
                {
                    isValid = false;
                    ViewData["Title"] = "Error: " + ViewData["Title"];
                    @await Html.PartialAsync("~/Views/PartialViews/_SpecificErrorsView.cshtml",
                                new Tuple<string, IEnumerable<Microsoft.AspNetCore.Mvc.ModelBinding.ModelError>>("RegisteredName", Html.ViewData.ModelState["HasGPG44"]?.Errors))

                }

                @await Html.PartialAsync("~/Views/PartialViews/_TwoRadioButtonGroupView.cshtml", new TwoRadioButtonGroupViewModel
            {
                PropertyName = "HasGPG44",
                Value = true,
                HasError = Html.ViewData.ModelState.ContainsKey("HasGPG44") && Html.ViewData.ModelState["HasGPG44"].Errors.Count > 0,
                ErrorMessage = Html.ViewData.ModelState.ContainsKey("HasGPG44") && Html.ViewData.ModelState["HasGPG44"].Errors.Count > 0 ?
                Html.ViewData.ModelState["HasGPG44"].Errors[0].ErrorMessage : string.Empty,
                Label1 = "Yes",
                Label2 = "No"
            })
                <button type="submit" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </div>
    </main>
</div>

