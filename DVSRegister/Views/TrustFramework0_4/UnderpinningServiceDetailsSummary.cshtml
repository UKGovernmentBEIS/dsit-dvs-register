@model DVSRegister.Models.CAB.ServiceSummaryViewModel
@{
    ViewData["Title"] = "Details you have provided about the underpinning service";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";

    ViewData["Manual"] = true;
}

<div class="govuk-width-container">
    @await Html.PartialAsync("~/Views/PartialViews/_BackButton.cshtml")
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-body govuk-hint">
                    The certification of the white-labelled service will be linked to this underpinning service.
                </p>
                <p class="govuk-body govuk-hint govuk-!-padding-bottom-6">
                    Select 'Continue' to provide further details about the white-labelled service.
                </p>
                @await Html.PartialAsync("PartialViews/_UnderpinningServiceDetails", Model)

                @using (Html.BeginForm("UnderpinningServiceDetailsSummary", "TrustFramework0_4", FormMethod.Post))
                {
                    @if (Model != null && Model.IsAmendment)
                    {
                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button govuk-!-margin-top-2" name="action" value="amend">Save changes</button>
                            <a href="@Model.RefererURL" class="govuk-button govuk-button--secondary" role="button" draggable="false" data-module="govuk-button">
                                Cancel
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button" name="action" value="continue">
                                Continue
                            </button>
                            <button type="submit" role="link" class="govuk-button govuk-button--secondary" name="action" value="draft">  Save and complete later </button>
                        </div>
                    }
                }
            </div>
        </div>
    </main>
</div>