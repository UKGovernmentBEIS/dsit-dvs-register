@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DVSRegister.Models.CAB.ServiceSummaryViewModel

@{
    ViewData["Title"] = "White-labelled service";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div class="govuk-width-container">
    @Html.ActionLink("Back", "SelectServiceType", "TrustFramework0_4", null, new { @class = "govuk-back-link" })
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <div class="govuk-body">
                    <h2 class="govuk-heading-m">Status of the underpinning service</h2>
                    <p class="govuk-hint">
                        You have told us that this service is a white-labelled service that relies on another
                        underpinning service.
                    </p>
                    <p class="govuk-hint">
                        Tell us whether the underpinning service appears on the register of digital identity and
                        attributes services.
                    </p>
                </div>
                <form
                    asp-action="StatusOfUnderpinningService"
                    class="govuk-form-group govuk-!-margin-top-7"
                    method="post">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-visually-hidden">
                            What is the status of the underpinning service?
                        </legend>
                        <div class="govuk-radios" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input
                                    class="govuk-radios__input"
                                    id="Published"
                                    name="isUnderPinningServicePublished"
                                    type="radio"
                                    value="true"/>
                                <label class="govuk-label govuk-radios__label" for="Published">
                                    The underpinning service is published on the register
                                </label>
                            </div>
                            <div class="govuk-radios__item">
                                <input
                                    class="govuk-radios__input"
                                    id="Certified"
                                    name="isUnderPinningServicePublished"
                                    type="radio"
                                    value="false"/>
                                <label class="govuk-label govuk-radios__label" for="Certified">
                                    The underpinning service is certified but not published on the register
                                </label>
                            </div>
                        </div>
                        <span asp-validation-for="IsUnderpinningServicePublished" class="govuk-error-message"></span>
                    </fieldset>
                    <button type="submit" class="govuk-button govuk-!-margin-top-4">
                        Continue
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>