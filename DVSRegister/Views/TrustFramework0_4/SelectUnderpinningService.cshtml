@{
    ViewData["Title"] = "Select the underpinning service";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    var autocompleteOptions = @ViewBag.ServiceAndProviderNames;
}

<div class="govuk-width-container">
    <a href="#" class="govuk-back-link">Back</a>
    <main id="main-content" class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full govuk-!-margin-bottom-5">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-hint">
                    You have told us that the underpinning service is published to the register of digital identity and attribute services.
                </p>
                <p class="govuk-hint">
                    Search for the underpinning service the white-labelled service relies on.
                </p>
            </div>
            <div class="govuk-grid-column-one-half">
                 @using (Html.BeginForm("#", "#", FormMethod.Post))
                {
                <h2 class="govuk-heading-s govuk-!-margin-bottom-0">Search for a service</h2>
                <label class="govuk-hint" for="autocomplete-input">You can find a service by searching for its name or the service provider’s name</label>
                <div id="autocomplete-container"
                     class="autocomplete__wrapper"
                         data-autocomplete-items='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(autocompleteOptions))'>
                </div>
                    <div class="govuk-button-group">
                        <button type="submit" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button" name="action" value="continue">
                            Continue
                        </button>
                        <button type="submit" role="link" class="govuk-button govuk-button--secondary" name="action" value="draft">
                            Clear Search
                        </button>
                    </div>
                }
            </div>
        </div>
    </main>
</div>

