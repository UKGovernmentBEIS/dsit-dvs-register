@model DVSRegister.Models.CAB.URNViewModel
@{
    ViewData["Title"] = "Validate URN For Application";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
@using (Html.BeginForm("CheckInformation", "Cab", FormMethod.Get))
{
    <div class="govuk-width-container">
        @Html.ActionLink("Back", "ValidateURNForApplication", "Cab", null, new { @class = "govuk-back-link" })
        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl"> Data associated with this unique reference number </h1>
                    <dl class="govuk-summary-list">
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Unique reference number
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Model.URN
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Registered name
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Model.RegisteredName
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Trading name(s)
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Model.TradingName
                            </dd>
                        </div>
                    </dl>

                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Continue
                    </button>
                </div>
            </div>
        </main> 
    </div>
}