
@{
    ViewData["Title"] = "CheckURNStartPage";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<div>
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-breadcrumbs">
                        <ol class="govuk-breadcrumbs__list">
                            <li class="govuk-breadcrumbs__list-item">
                                @Html.ActionLink("Home", "LandingPage", "Cab", null, new { @class = "govuk-breadcrumbs__link" })
                            </li>
                            <li class="govuk-breadcrumbs__list-item">
                                @Html.ActionLink("Check unique reference number", "CheckURNStartPage", "Cab", null, new { @class = "govuk-breadcrumbs__link" })
                            </li>
                        </ol>
                    </div>
                    <h1 class="govuk-heading-xl govuk-!-margin-top-2">
                        Check unique reference number
                    </h1>
                    <p class="govuk-body">
                        Before you start the certification process you must confirm if the digital
                        identity and attribute service provider that you will be working with, has
                        passed the pre-registration stage. If they have, they will have received a
                        unique reference number (URN) which they should have provided you.
                    </p>
                    <p class="govuk-body">
                        This form helps you verify if the URN is valid and is linked to the service
                        provider that shared it with you.
                    </p>
                    <p class="govuk-body">
                        To complete the check you will need:
                    </p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>URN provided by the service provider.</li>
                    </ul>

                    <a href="@Url.Action("CheckURN", "Cab")" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                        Start now
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                        </svg>
                    </a>

                </div>
            </div>
        </main>
    </div>
</div>

